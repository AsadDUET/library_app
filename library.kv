<ListSelectScreen>:
    GridLayout:
        cols: 1
        MDToolbar:
            id: toolbar
            title: ''
            height: dp(30)
            # md_bg_color: app.theme_cls.primary_color
            elevation: 10
            left_action_items: [["arrow-left", lambda x: root.back()]]
            pos_hint: {"top": 1}
        MDLabel:
            text: "Select List"
            font_style: 'H5'
            size_hint_y:.1
            halign: "center"
        GridLayout:
            cols:3
            spacing: dp(10)
            MDRaisedButton:
                text: 'BookList'
                size_hint: 1, 1
                on_release: root.go_book_screen()
            MDRaisedButton:
                text: 'Student List'
                size_hint: 1, 1
                on_release: root.go_student_screen()
            MDRaisedButton:
                text: 'Exchanges'
                size_hint: 1, 1
                on_release: root.go_exchange_screen()
            
